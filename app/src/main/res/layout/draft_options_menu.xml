<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_xxxs"
    android:background="@drawable/custom_popup_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/continueOption"
        style="@style/KanguroTextStyle.Body.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_nano"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_xxxs"
        android:paddingTop="@dimen/spacing_xxxs"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_xxxs"
        android:text="@string/btn_continue"
        app:drawableStartCompat="@drawable/ic_continue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="1dp"
        android:background="@color/neutral_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/deleteOption"
        style="@style/KanguroTextStyle.Body.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_nano"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_xxxs"
        android:text="@string/btn_delete"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_trash" />


</LinearLayout>