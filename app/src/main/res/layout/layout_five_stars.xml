<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="starCount"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:showIn="@layout/layout_last_activity_item">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:src="@{starCount >= 1 ? @drawable/ic_star_filled : @drawable/ic_star_outline}"
            tools:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:src="@{starCount >= 2 ? @drawable/ic_star_filled : @drawable/ic_star_outline}"
            tools:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:src="@{starCount >= 3 ? @drawable/ic_star_filled : @drawable/ic_star_outline}"
            tools:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:src="@{starCount >= 4 ? @drawable/ic_star_filled : @drawable/ic_star_outline}"
            tools:src="@drawable/ic_star_outline" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@{starCount >= 5 ? @drawable/ic_star_filled : @drawable/ic_star_outline}"
            tools:src="@drawable/ic_star_outline" />

    </LinearLayout>
</layout>