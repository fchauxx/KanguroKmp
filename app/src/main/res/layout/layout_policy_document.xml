<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_lightest" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/docTitle"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="@dimen/spacing_xxxs"
        android:paddingStart="@dimen/spacing_xxxs"
        android:paddingEnd="@dimen/spacing_md"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/KanguroTextStyle.Body.Regular"
        tools:text="Policy Document" />

    <ProgressBar
        android:id="@+id/loader"
        style="@style/ProgressBarNormal"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_gravity="end|center_vertical" />

</FrameLayout>