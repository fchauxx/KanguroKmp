<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height_large"
    android:background="@color/neutral_background">

    <TextView
        android:id="@+id/firstAction"
        style="@style/KanguroTextStyle.Body.Regular"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="Add more" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/neutral_lightest" />

    <TextView
        android:id="@+id/secondAction"
        style="@style/KanguroTextStyle.Body.Bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="Done" />

</LinearLayout>