<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.scenes.billingPreferences.BillingPreferencesFragment">

    <ImageButton
        android:id="@+id/closeButton"
        style="@style/KanguroCloseButtonX"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:layout_marginHorizontal="@dimen/spacing_xxs"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:paddingBottom="@dimen/spacing_xs"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_xxxs"
        android:layout_marginTop="@dimen/spacing_xxxs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>