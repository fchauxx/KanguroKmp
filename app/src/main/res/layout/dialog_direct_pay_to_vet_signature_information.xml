<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white_16_stroke_secondary_darkest"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingBottom="52dp">

    <ImageView
        android:id="@+id/referCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="32dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_information_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/museo_sans"
        android:text="@string/direct_pay_to_vet_information_title"
        android:textAlignment="center"
        android:textColor="@color/secondary_darkest"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="@string/direct_pay_to_vet_information_message"
        android:textAlignment="center"
        android:textColor="@color/secondary_darkest"
        android:textSize="16sp" />
</LinearLayout>


