<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="100"
    android:exitFadeDuration="100">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_background" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/secondary_lightest" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <size
                        android:width="24dp"
                        android:height="24dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/secondary_dark" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item
                android:bottom="4dp"
                android:end="4dp"
                android:start="4dp"
                android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/tertiary_darkest" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/secondary_medium" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</animated-selector>